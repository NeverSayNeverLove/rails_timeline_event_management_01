<header class="main-header" id="main-header">
  <div class="header-top">
    <div class="auto-container clearfix">
      <div class="top-left">
        <ul class="clearfix">
          <li>
            <a href="#"><span class="fa fa-circle">
              </span> <%= t(".hellow") %>
            </a>
          </li>
        </ul>
      </div>
      <div class="top-right">
        <ul class="clearfix">
          <li>
            <%= link_to "#" do %>
              <span class="fa fa-phone"></span>
              <%= t ".nam1" %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <span class="fa fa-clock-o">
              </span><%= t ".nam2" %>
            <% end %>
          </li>
          <li>
            <%= link_to "mailto:noreply@regulator.com" do%>
              <span class="fa fa-at">
              </span>
              <%= t ".nam3" %>
            <% end %>
          </li>
          <li>
            <%= link_to "mailto:noreply@regulator.com" do%>
              <span class="fa fa-map-marker">
              </span>
              <%= t ".nam4" %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="header-lower">
    <div class="auto-container clearfix">
      <div class="outer-box">
        <div class="logo">
          <%= image_tag "image.jpeg" %>
        </div>
        <nav class="main-menu">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div class="navbar-collapse">
            <ul class="navigation">
              <li>
                <%= link_to t(".home"), home_path %>
              </li>
              <li>
                <%= link_to t(".about"), about_path %>
              </li>
              <li>
                <%= link_to t(".contact"), contact_path %>
              </li>
              <li>
                <%= link_to t(".help"), help_path %>
              </li>
              <li id="noti_Container" class="notiplus">
                <div id="noti_Counter"><%= current_user.count_notification %></div>
                <i id="noti_Button" class="fa fa-bell" aria-hidden="true"></i>
                <div id="notifications">
                  <h3 class="noti1"><%= t ".noti" %></h3>
                  <ul class="list-group list_fix">
                    <% current_user.notification.each do |notification| %>
                      <% if notification.event.time_to < Time.now %>
                      <li class="list-group-item list-group-item-success" id="notigroup">
                      <ul>
                        <li class="noti_form2">
                          <h4 class="noti_form"><%= t ".place" %></h4>
                          <h4 class="noti_form1">
                            <%= notification.event.place %></h4>
                        </li>
                        <br>
                        <li class="noti_form2">
                          <h4 class="noti_form"><%= t ".message" %></h4>
                          <h4 class="noti_form1">
                            <%= notification.event.description %></h4>
                        </li>
                        <br>
                         <li class="noti_form2">
                           <h4 class="noti_form"><%= t ".from" %></h4>
                           <h4 class="noti_form1">
                             <%= notification.event.time_from %></h4>
                         </li>
                        <li class="noti_form2">
                          <h4 class="noti_form"><%= t ".to" %></h4>
                          <h4 class="noti_form1">
                            <%= notification.event.time_to %></h4>
                        </li>
                       </ul>
                    </li>
                    <%else %>
                    <li class="list-group-item list-group-item-danger" id="notigroup">
                      <ul>
                        <li class="noti_form2">
                          <h4 class="noti_form"><%= t ".place" %></h4>
                          <h4 class="noti_form1">
                            <%= notification.event.place %></h4>
                        </li>
                        <br>
                        <li class="noti_form2">
                          <h4 class="noti_form"><%= t ".message" %></h4>
                          <h4 class="noti_form1">
                            <%= notification.event.description %></h4>
                        </li>
                        <br>
                         <li class="noti_form2">
                           <h4 class="noti_form"><%= t ".from" %></h4>
                           <h4 class="noti_form1">
                             <%= notification.event.time_from %></h4>
                         </li>
                        <li class="noti_form2">
                          <h4 class="noti_form"><%= t ".to" %></h4>
                          <h4 class="noti_form1">
                            <%= notification.event.time_to %></h4>
                        </li>
                       </ul>
                    </li>
                    <% end %>
                    <% end %>
                  </ul>
                </div>
              </li>
              <% if logged_in? %>
                <li>
                  <% if current_user.admin? %>
                    <%= link_to t(".users"), users_path %>
                  <% end %>
                </li>
                <li class="dropdown appoinment-btn">
                  <%= link_to "#", class: "dropdown-toggle thm-btn pt-5 pb-5", data:{ toggle: "dropdown"} do %>
                    <%= first_part_of current_user.email %><b class="caret"></b>
                    <% end %>
                    <ul class="dropdown-menu">
                      <li>
                        <%= link_to t(".profile"), current_user %>
                      </li>
                      <li>
                        <%= link_to t(".setting"), edit_user_path(current_user) %>
                      </li>
                      <li class="divider"></li>
                      <li>
                        <%= link_to t(".logout"), logout_path, method: :delete %>
                      </li>
                    </ul>
                </li>
              <% end %>
            </ul>
          </div>
        </nav>
      </div>
    </div>
  </div>
</header>
<section class="page-title" style="background-image:url(/assets/4.jpg);">
  <div class="auto-container">
    <h1><%= t ".calender" %></h1>
  </div>
</section>
