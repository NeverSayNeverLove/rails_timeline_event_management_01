<div id="wrapper">
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <%= link_to t(".home"), root_path, class: "navbar-brand" %>
        </div>
        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav" id="side-menu">
                    <li>
                        <%= link_to t(".charts"), "#", class: "fa fa-bar-chart-o fa-fw" %>
                    </li>
                    <li>
                        <%= link_to t(".user"), admin_showuser_path, class: "fa fa-table fa-fw" %>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"><%= t "t.users" %></h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                <th><%= link_to t(".email") %></th>
                                <th><%= link_to t(".role") %></th>
                                <th></th>
                                </tr>
                            </thead>
                            <% @users.each do |user| %>
                                <% unless current_user?(user) %>
                                <tbody>
                                    <tr>
                                    <td>
                                        <%= link_to user.email, user %>
                                    </td>
                                    <td><%= user.role %></td>
                                    <td>
                                        <% unless user.admin? %>
                                        <%= link_to t(".delete"), user, method: :delete,
                                            data: {confirm: t(".sure")} %>
                                        <% end %>
                                    </td>
                                    </tr>
                                </tbody>
                                <% end %>
                            <% end %>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
