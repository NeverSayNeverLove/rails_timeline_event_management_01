<%= render "admin/slidebar_menu"%>
<div id="wrapper">
  <div class="container pt-70 pb-70">
    <div>
      <% flash.each do |message_type, message| %>
        <%= content_tag :div, message, class: "alert alert-#{message_type}" %>
      <% end %>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header user"><%= t "t.users" %></h1>
      </div>
    </div>
    <div>
      <%= paginate @users %>
      <table class="table table-bordered table-hover table_fix">
        <thead>
          <tr >
            <th class="fix"><%=  t ".email" %></th>
            <th class="fix"><%=  t ".role" %></th>
            <th class="fix"><%=  t ".action" %></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <% unless current_user?user %>
            <tbody>
              <tr>
                <td>
                  <%= user.email %>
                </td>
                <td><%= user.role %></td>
                <td>
                  <% unless user.admin? %>
                    <%= link_to t(".delete"), admin_user_path(user), method: :delete,
                      data: {confirm: t(".sure")} %>
                  <% else %>
                    <%=  t ".no1" %>
                  <% end %>
                </td>
              </tr>
            </tbody>
          <% end %>
        <% end %>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>
