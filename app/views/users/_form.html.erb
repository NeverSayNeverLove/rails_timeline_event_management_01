<% flash.each do |message_type, message| %>
  <%= content_tag :div, message, class: "alert alert-#{message_type}" %>
<% end %>
<div class="login-header"><h4><%= yield :title %></h4></div>
<%= form_for @user, class: "new_user" do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: t(".email"), class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: t(".pass"), class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, placeholder: t(".pass_con"), class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit yield(:button_text), class: "btn btn-color btn-md btn-block btn-signup" %>
    </div>
  <% end %>
</form>
