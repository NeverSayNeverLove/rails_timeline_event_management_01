<% provide :title, t(".users_all") %>
<h1 class="centered" ><%= t ".alluser" %></h1>
<div class="container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th><%= link_to t(".email") %></th>
          <th><%= link_to t(".role") %></th>
          <th></th>
        </tr>
      </thead>
      <% @users.each do |user| %>
        <% unless current_user?(user) %>
          <tbody>
            <tr>
              <td>
                <%= link_to user.email, user %>
              </td>
              <td><%= user.role %></td>
              <td>
                <% unless user.admin? %>
                  <%= link_to t(".delete"), user, method: :delete,
                    data: {confirm: t(".sure")} %>
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      <% end %>
    </table>
</div>
